<Window x:Class="RastrovyGrafickyEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RastrovyGrafickyEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <!-- Horní Panel -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#EEE" Margin="5">
                <Label Content="Barva:" />
                <ComboBox x:Name="ColorPicker" Width="100" SelectionChanged="ColorPicker_SelectionChanged">
                    <ComboBoxItem Content="Black" IsSelected="True"/>
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Green"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Orange"/>
                </ComboBox>

                <Label Content="Tloušťka:" Margin="10,0,0,0"/>
                <Slider x:Name="BrushSizeSlider" Minimum="1" Maximum="20" Width="100" Value="5" Margin="0,0,10,0"/>

                <Label Content="Tvar:" />
                <ComboBox x:Name="ShapePicker" Width="100">
                    <ComboBoxItem Content="None" IsSelected="True"/>
                    <ComboBoxItem Content="Rectangle"/>
                    <ComboBoxItem Content="Square"/>
                    <ComboBoxItem Content="Ellipse"/>
                </ComboBox>

                <Button Content="Uložit" Click="SaveButton_Click" Margin="10,0,0,0"/>
                <Button Content="Načíst" Click="LoadButton_Click" Margin="5,0,0,0"/>
                <Button Content="Vymazat" Click="ClearButton_Click" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Plátno -->
            <InkCanvas 
                x:Name="DrawingCanvas" 
                Background="White"
                MouseDown="DrawingCanvas_OnMouseDown" 
                />
        </DockPanel>
    </Grid>
</Window>
